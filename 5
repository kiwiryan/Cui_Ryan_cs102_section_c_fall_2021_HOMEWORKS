        "  #  ",
        " #   ",
        "#####",
    }
};

int main(){
    char str[20];
    // Program only accepts characters and spaces
    // No numbers or punctuation
    printf("Enter a string\n");
    gets(str);
    int offset;
    for(int i = 0; i < 5; i++){
        for(int j = 0; str[j] != '\0'; j++){
            if(str[j] == 32){
                printf("     ");
            } else {
                offset = 65;
                if(str[j] >= 97){
                    offset = 97;
                }
                printf("%s  ", block[str[j] - offset][i]);
            }
        }
        printf("\n");
    }
    return 0;
}
